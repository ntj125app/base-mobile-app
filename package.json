{
    "name": "base-mobile-app",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "rm -rf dist && vite",
        "serve": "rm -rf dist && vite preview",
        "build": "rm -rf dist && vite build",
        "test": "cypress run",
        "browser": "echo \"const supportedBrowsers = $(browserslist-useragent-regexp --allowHigherVersions);\n\nexport { supportedBrowsers };\" > src/ts/browser.ts",
        "all:fix": "pnpm run prettier:fix ; pnpm run eslint:fix",
        "eslint": "eslint --ext .js,.cjs,.ts,.vue src",
        "eslint:fix": "eslint --ext .js,.cjs,.ts,.vue src --fix",
        "prettier": "prettier --check src/**/*.{css,scss,vue,js,cjs,ts,json,md} tests/**/*.{css,scss,vue,js,cjs,ts,json,md} *.{css,scss,vue,js,cjs,ts,json,md}",
        "prettier:fix": "prettier --write src/**/*.{css,scss,vue,js,cjs,ts,json,md} tests/**/*.{css,scss,vue,js,cjs,ts,json,md} *.{css,scss,vue,js,cjs,ts,json,md}",
        "mobile:icon": "pnpm dlx @capacitor/assets generate"
    },
    "description": "An Ionic project",
    "dependencies": {
        "@capacitor/android": "^6.0.0",
        "@capacitor/app": "^6.0.0",
        "@capacitor/core": "^6.0.0",
        "@capacitor/device": "^6.0.0",
        "@capacitor/haptics": "^6.0.0",
        "@capacitor/ios": "^6.0.0",
        "@capacitor/keyboard": "^6.0.0",
        "@capacitor/push-notifications": "^6.0.0",
        "@capacitor/splash-screen": "^6.0.0",
        "@capacitor/status-bar": "^6.0.0",
        "@capacitor/toast": "^6.0.0",
        "@ionic/pwa-elements": "^3.2.2",
        "@ionic/vue": "^8.1.0",
        "@ionic/vue-router": "^8.1.0",
        "@sentry/capacitor": "^0.17.0",
        "@sentry/vue": "7.93.0",
        "@vueuse/core": "^10.9.0",
        "axios": "^1.6.8",
        "core-js": "^3.37.0",
        "dotenv": "^16.4.5",
        "ionicons": "^7.4.0",
        "laravel-echo": "^1.16.1",
        "lodash": "^4.17.21",
        "pinia": "^2.1.7",
        "primeicons": "^7.0.0",
        "primevue": "^3.52.0",
        "pusher-js": "8.4.0-rc2",
        "vue": "^3.4.26",
        "vue-router": "^4.3.2"
    },
    "devDependencies": {
        "@capacitor/cli": "^6.0.0",
        "@pinia/testing": "^0.1.3",
        "@types/chai": "^4.3.16",
        "@types/jest": "^29.5.12",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.12.10",
        "@typescript-eslint/eslint-plugin": "^7.8.0",
        "@typescript-eslint/parser": "^7.8.0",
        "@vitejs/plugin-vue": "^5.0.4",
        "@vue/eslint-config-typescript": "^13.0.0",
        "@vue/test-utils": "^2.4.5",
        "autoprefixer": "^10.4.19",
        "browserslist-useragent-regexp": "^4.1.3",
        "cypress": "^13.8.1",
        "cypress-vite": "^1.5.0",
        "daisyui": "^4.10.5",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-vue": "^9.25.0",
        "flowbite": "^2.3.0",
        "postcss": "^8.4.38",
        "postcss-convert-values": "^6.1.0",
        "prettier": "^3.2.5",
        "sass": "^1.76.0",
        "tailwindcss": "^3.4.3",
        "vite": "^5.2.11",
        "vite-plugin-static-copy": "^1.0.4",
        "vue-screen": "^2.4.0"
    }
